{{!-- Previous/next page links - only displayed on page 2+ --}}
<div class="extra-pagination inner">
    {{pagination}}
</div>

{{!-- This is the post loop - each post will be output using this markup --}}
<section id="container-wrapper">

    <div id="wrapper">
       <div id="inner">
        <ul class="child">
          {{#foreach posts columns="3"}}
          <article class="{{post_class}}{{#if @rowStart}} row-start{{/if}}{{#if @rowEnd}} row-end{{/if}}{{#if image}} gridImg" style="background:linear-gradient(rgba(0, 0, 0, 0.55),rgba(0, 0, 0, 0.55)), url({{image}}){{else}} no-cover{{/if}}">
              <a class="read-more fullboxlink" href="{{url}}">
              <header class="post-header">
                  <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
              </header>
              <span class="line"></span>
              <section class="post-excerpt">
                  <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
              </section>
              <footer class="post-meta">
                  {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
                  {{author}}

                  <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                  <i class="fa fa-commenting" aria-hidden="true"></i><a class="comments_disqus" data-disqus-identifier="{{id}}" href="{{url}}#disqus_thread"></a>
              </footer>
              </a>
          </article>
          {{/foreach}}
          {{pagination}}
        </ul>
       </div>
    </div>
    <div class="clear"></div>

</section>

